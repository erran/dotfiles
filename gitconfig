[core]
  editor = vim
  pager = less -F -X -r
  excludesfile = ~/.gitignore
  autocrlf = input
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "branch"]
  remote = blue
[color "status"]
  added = green
  changed = blue bold
  untracked = magenta
  removed = red bold
[user]
  name = Erran Carey
  email = me@errancarey.com
[push]
  default = simple
[i18n]
  logoutputencoding = utf8
[alias]
  incoming = !git fetch && git log ..FETCH_HEAD
  outgoing = !git fetch && git log FETCH_HEAD..
  please = !git push --force-with-lease
  graph = log --graph --all --format='%h %s%n        (%an, %ar)%d' --abbrev-commit
[pull]
	ff = only
[init]
	defaultBranch = main
